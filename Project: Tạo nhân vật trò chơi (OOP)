class nhanvathetho(nhanvattrochoi):
    def hanhdong(self):
        def kynang(n):
            if n == 'kynang1':
                print('Nhân vật sử dụng: Giáp thổ')
            elif n == 'kynang2':
                print('Nhân vật sử dụng chiêu: Khổng lồ đá')
            elif n == 'kynang3':
                print('Nhân vật sử dụng chiêu: Phân chia lãnh thổ')
            elif n == 'chieucuoi':
                print('Nhân vật sử dụng chiêu cuối: Ma trận thổ hệ')
            else:
                print('...')
        
        hanhdong = input("Chọn hành động cho nhân vật (chạy/lướt/nhảy/lộn/bay/kynang1/kynang2/kynang3/chieucuoi): ")
        if hanhdong == 'kynang1' or hanhdong == 'kynang2' or hanhdong == 'kynang3' or hanhdong == 'chieucuoi':
            kynang(hanhdong)
        else: 
            print("Nhân vật " + hanhdong)





print("VUI LÒNG XÂY DỰNG NHÂN VẬT CỦA BẠN!")
gioitinh = input("Giới tính bạn chọn (nam/nữ): ")
thanhinh = input("Thân hình bạn muốn chọn (1,2,3,4): ")
toc = input("Tóc bạn muốn chọn (1,2,3,4): ")
khuonmat = input("Khuôn mặt bạn muốn chọn (1,2,3,4): ")
trangphuc = input("Trang phục bạn muốn chọn (1,2,3,4): ")
he = input("Nhân vật của bạn thuộc hệ (kim, mộc, thủy, hỏa, thổ): ")
print("\n")


if he.title() == 'Kim':
    nhanvat1 = nhanvathekim(gioitinh, thanhinh, toc, khuonmat, trangphuc, he)
    nhanvat1.taohinhnhanvat()
    nhanvat1.hanhdong()
elif he.title() == 'Mộc':
    nhanvat1 = nhanvathemoc(gioitinh, thanhinh, toc, khuonmat, trangphuc, he)
    nhanvat1.taohinhnhanvat()
    nhanvat1.hanhdong()
elif he.title() == 'Thủy':
    nhanvat1 = nhanvathethuy(gioitinh, thanhinh, toc, khuonmat, trangphuc, he)
    nhanvat1.taohinhnhanvat()
    nhanvat1.hanhdong()
elif he.title() == 'Hỏa':
    nhanvat1 = nhanvathehoa(gioitinh, thanhinh, toc, khuonmat, trangphuc, he)
    nhanvat1.taohinhnhanvat()
    nhanvat1.hanhdong()
elif he.title() == 'Thổ':
    nhanvat1 = nhanvathetho(gioitinh, thanhinh, toc, khuonmat, trangphuc, he)
    nhanvat1.taohinhnhanvat()
    nhanvat1.hanhdong()
else:
    print("Tạo nhân vật không thành công!")
    print("Vui lòng thử lại sau...")
