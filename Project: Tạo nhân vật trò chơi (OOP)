import time


class nhanvattrochoi:
    def __init__(self, gioitinh, thanhinh, toc, khuonmat, trangphuc, he):
        self.gioitinh = gioitinh
        self.thanhinh = thanhinh
        self.toc = toc
        self.khuonmat = khuonmat
        self.trangphuc = trangphuc
        self.he = he

    def taohinhnhanvat(self):
        print("Nhân vật đang được tạo .....")
        time.sleep(15)
        print("Tạo nhân vật thành công!")
        print("\n")
        print("Nhân vật của bạn: ")
        print("Giới tính nhân vật: " + self.gioitinh)
        print("Thân hình nhân vật loại " + self.thanhinh)
        print("Tóc nhân vật loại " + self.toc)
        print("Khuôn mặt nhân vật loại " + self.khuonmat)
        print("Trang phục nhân vật loại " + self.trangphuc)
        print("Nhân vật thuộc hệ: " + self.he)
        print('\n')


class nhanvathekim(nhanvattrochoi):     
    def hanhdong(self):
        def kynang(n):
            if n == 'kynang1':
                print('Nhân vật sử dụng: Thân thể bọc kim')
            elif n == 'kynang2':
                print('Nhân vật sử dụng chiêu: Lưỡi thương kim cương')
            elif n == 'kynang3':
                print('Nhân vật sử dụng chiêu: Thảm kim cương')
            elif n == 'chieucuoi':
                print('Nhân vật sử dụng chiêu cuối: Cơn mưa vàng')
            else:
                print('...')
        
        hanhdong = input("Chọn hành động cho nhân vật (chạy/lướt/nhảy/lộn/bay/kynang1/kynang2/kynang3/chieucuoi): ")
        if hanhdong == 'kynang1' or hanhdong == 'kynang2' or hanhdong == 'kynang3' or hanhdong == 'chieucuoi':
            kynang(hanhdong)
        else: 
            print("Nhân vật " + hanhdong)

    

    
class nhanvathemoc(nhanvattrochoi):
    def hanhdong(self):
        def kynang(n):
            if n == 'kynang1':
                print('Nhân vật sử dụng: Thần dược ')
